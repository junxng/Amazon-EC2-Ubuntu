# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Qdrant Vector DB Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=pdf_collection  # This should be QDRANT_COLLECTION, not QDRANT_COLLECTION_NAME

# File Storage Paths
PDF_STORAGE_PATH=data/pdfs  # This path doesn't match your code's default

# Application Settings
DEBUG=False
ENVIRONMENT=development
LOG_LEVEL=INFO

# Optional: Maximum PDF file size in MB
MAX_PDF_SIZE_MB=10  # This is hardcoded as 10MB in app/main.py

# Optional: Model configuration
EMBEDDINGS_MODEL=text-embedding-3-small
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0
